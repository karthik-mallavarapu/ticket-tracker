<h2 class="subheader">User Info</h2>
<div class="row">
	<blockquote>
		<p>Email: <%=@user.email%></p>
		<p>Admin: <%=@user.admin? ? "yes" : "no"%> </p>
	</blockquote>
<ul class="inline-list">
	<li><%= link_to "Permissions", admin_user_permissions_path(@user) %></li>
	<li><%= link_to "Edit User", edit_admin_user_path(@user) %></li>
	<li><%= link_to "Delete User", admin_user_path(@user), :method => :delete, data: {confirm: "Are you sure you want to delete this user?"} %></li>
</ul>

</div>