<%= simple_form_for(@project) do |f| %>
	<div class="row error">
		<%= f.error_messages %>
	</div>
	<div class="row">
		<div class="large-4">
		  	<%= f.input :name %>
		</div> 
	</div>
	<div class="row">
		<div class="large-4">
		  	<%= f.input :description %>
		</div> 
	</div>
  <div class="row">
	  <div class="large-6 columns"> 
	  	<%= f.submit class: "button small" %>
	  </div>
  </div>
<% end %>